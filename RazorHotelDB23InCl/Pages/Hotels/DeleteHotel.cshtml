@page
@model RazorHotelDB23InCl.Pages.Hotels.DeleteHotelModel
@{
    ViewData["Title"] = "Delete hotel";
}

<h1>Delete hotel</h1>
<h2>Do you want to delete this hotel?</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">


            <div class="form-group">
                <label asp-for="@Model.HotelToDelete.HotelNr" class="control-label"></label>
                <input asp-for="@Model.HotelToDelete.HotelNr" class="form-control"readonly />

            </div>
            <div class="form-group">
                <label asp-for="@Model.HotelToDelete.Navn" class="control-label"></label>
                <input asp-for="@Model.HotelToDelete.Navn" class="form-control"readonly />

            </div>

            <div class="form-group">
                <label asp-for="@Model.HotelToDelete.Adresse" class="control-label"></label>
                <input asp-for="@Model.HotelToDelete.Adresse" class="form-control"readonly />

            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div
