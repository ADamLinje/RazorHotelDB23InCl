@page
@model RazorHotelDB23InCl.Pages.Rooms.GetAllRoomsModel
@{
    ViewData["Title"] = "GetAllRooms";
}
<h1>Velkommen til Værelsessiden</h1>

<p>
    <a asp-page="CreateRoom">Create a new room</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Room No
            </th>
            <th>
                Type
            </th>
            <th>
                Price
            </th>
            <th>
                Hotel No
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Rooms.Count() != 0)
        {
            @foreach (var item in Model.Rooms)
            {
                <tr>
                    <td>
                        @item.RoomNr
                    </td>
                    <td>
                        @item.Types
                    </td>
                    <td>
                        @item.Pris
                    </td>
                    <td>
                        @item.HotelNr
                    </td>
                    <td>
                        <a asp-page="/Rooms/UpdateRoom" asp-route-hotelnr="@item.HotelNr" asp-route-roomnr="@item.RoomNr">Edit</a>
                        <a asp-page="/Rooms/DeleteRoom" asp-route-hotelnr="@item.HotelNr" asp-route-roomnr="@item.RoomNr">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

